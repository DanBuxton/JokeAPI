{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src/",
    "outDir": "./out/",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "noImplicitThis": false,
    "paths": {
      "@db/*": ["src/db/*"],
      "@lib/*": ["src/lib/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/server/routes/*"],
      "@server/*": ["src/server/*"],
      "@/*": ["src/*"],
    },
  },
  "ts-node": {
    "esm": true,
    "preferTsExts": true,
    "transpileOnly": true
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "src/types/**.*"],
  "exclude": ["node_modules", "out", "src/test.ts"]
}
